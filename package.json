{
    "name"       : "express-view",
    "description": "Express view class for synthetic views.",
    "version"    : "0.1.0",
    "homepage"   : "https://github.com/caridy/express-view",

    "keywords": [
        "express", "view", "template", "modown", "engine", "javascript"
    ],

    "author": {
        "name" : "Caridy Patino",
        "email": "caridy@gmail.com",
        "url"  : "http://caridy.name/"
    },
    "contributors": [
        "alberto chan <imalberto@gmail.com>",
        "Drew Folta <drew@folta.net>"
    ],

    "main": "index",

    "directories": {
        "lib"    : "./lib",
        "example": "./examples"
    },

    "repository": {
        "type": "git",
        "url" : "git://github.com/yahoo/express-view.git"
    },

    "bugs": {
        "url": "https://github.com/yahoo/express-view/issues"
    },

    "engines": {
        "node": ">=0.8.x",
        "npm" : ">=1.2.10"
    },

    "dependencies": {
        "debug": "*"
    },

    "peerDependencies": {
        "express": ">=3.x"
    },

    "devDependencies": {
        "chai"               : "*",
        "express"            : "4.x",
        "istanbul"           : "*",
        "mocha"              : "*",
        "mockery"            : "*",
        "xunit-file"         : "*",
        "jshint"             : "~1.1.0",
        "yui-lint"           : "~0.1.3"
    },

    "scripts": {
        "test": "istanbul cover -- ./node_modules/mocha/bin/_mocha tests/units/*.js --reporter spec",
        "lint": "jshint --config ./node_modules/yui-lint/jshint.json ./*.js ./lib/*.js"
    }
}
